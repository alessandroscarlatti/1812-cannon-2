<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout1">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical"

    app:layout_constraintBottom_toTopOf="@+id/layout1_wrapper"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stuff and things" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:paddingBottom="150dip" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/button_volume"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:background="@drawable/ic_volume_on"
            android:padding="35dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <!--<View-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"/>-->

        <!--<ImageView-->
        <!--android:id="@+id/buttonFire"-->
        <!--android:layout_width="150dip"-->
        <!--android:layout_height="150dip"-->
        <!--android:padding="10dip" />-->

        <ImageView
            android:id="@+id/button_fire"
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:padding="10dip"
            android:src="@drawable/fire_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>