<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.cannon1812.FirstFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:paddingBottom="150dip">


        </androidx.viewpager.widget.ViewPager>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:stretchColumns="1,2,3"
            android:gravity="center_vertical"
            >

            <TableRow
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_column="1"

                    >

                    <Button
                        android:id="@+id/button_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:foregroundTint="@color/material_on_primary_emphasis_medium"
                        android:drawableLeft="@drawable/ic_volume_off_sm"

                        />

                    <Button
                        android:id="@+id/button_device_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:drawableLeft="@drawable/ic_volume_off_sm"
                        android:drawablePadding="-15sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/button_fire"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fire_button"
                    android:layout_margin="5dp"
                    android:layout_column="2"
                    android:alpha=".5"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    >

                    <Button
                        android:id="@+id/button_previous_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="prev"
                        android:drawablePadding="-15sp" />
                    <Button
                        android:id="@+id/button_next_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="next"
                        android:drawablePadding="-15sp" />

                </LinearLayout>

            </TableRow>


        </TableLayout>

<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_marginBottom="10dp">-->



<!--        </RelativeLayout>-->


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>